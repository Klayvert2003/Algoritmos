#include <iostream>

using namespace std;

int main() 
{
	string funcionarios[5][2];
	
	for(int i=0;i < 5;i++)
	{
		cout << "Informe o nome " << i+1 << endl;
		cin >> funcionarios[i][0];
		
		cout << "Informe o codigo " << i+1 << endl;
		cin >> funcionarios[i][1];
		
		cout << "-------------------------------------------------------------------------------------------------" << endl;
	}
	
	for(int i=0; i < 5;i++)
	{
		cout << funcionarios[i][0] << "|" << funcionarios[i][1] << endl;
	}
	
	return 0;
}
